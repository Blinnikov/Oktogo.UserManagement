@model Oktogo.UserManagement.Web.UserManagementService.User
<tr>
  <td>
    @Html.ActionLink(string.Format("{0} {1}", Model.FirstName, Model.LastName), "Edit", "User", new { id = Model.Id }, null)
  </td>
  <td>
    @Html.DisplayFor(modelItem => Model.Email)
  </td>
  <td>
    @using (Html.BeginForm("Delete", "User", FormMethod.Post))
    {
      @Html.Hidden("id", Model.Id)
      <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to Delete?');" />
    }
  </td>
</tr>
