@model Oktogo.UserManagement.Web.UserManagementService.User

@if(Model.Id == 0)
{
    <h1>Add new user</h1>
}
else
{
    <h1>Edit @Model.FirstName @Model.LastName</h1>
}

<br/>
@using (Html.BeginForm("Edit", "User"))
{
    <div>
        @Html.ValidationSummary()
    </div>
    <div>
        <fieldset>
            <legend>User details</legend>
            @Html.HiddenFor(m => m.Id)
            <div class="editor-label">
                @Html.LabelFor(u => u.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.FirstName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Email)
            </div>
        </fieldset>
    </div>
    <br/>
    <input type="submit" value="Save"/>
    @Html.ActionLink("Cancel and return to list", "Index")
}
